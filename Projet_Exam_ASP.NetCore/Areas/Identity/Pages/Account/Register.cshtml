                            <label for="Société" style="margin-bottom: 4px; margin-top: 4px;">@StatutPropriétaire.Société</label>
                            <span asp-validation-for="Input.Status" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="tab-content">
                        <div class="tab-pane active">
                            <!---->

                            <div class="picture-container" id="ImgUser">
                                <div class="picture" style="margin-left: 40%; margin-top: 10px; margin-bottom: 20px;">
                                    <img src="~/Images/Profile_Icone_Par_Defaut.png" class="picture-src" id="wizardPicturePreview" title="" style="object-fit: cover; height:100%;">
