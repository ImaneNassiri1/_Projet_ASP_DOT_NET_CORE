                                </div>
                                <h6 class=""></h6>
                            </div>



                            <div class="row register-form " style="margin-top: 0%;padding-top: 0%;padding-right: 10%;padding-bottom: 10%;padding-left: 10%;">

                                <div class="col-md-6">
                                    <div id="Usercol1" class="form-group">

                                        <div class="form-group">

                                            <input asp-for="Input.Nom" class="form-control" placeholder="Nom" />
                                            <span asp-validation-for="Input.Nom" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <input asp-for="Input.Email" class="form-control" placeholder="Email" />
                                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <input asp-for="Input.Password" class="form-control" placeholder="Mot de passe" />
                                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <input asp-for="Input.Telephone" class="form-control" placeholder="Telephone" />
                                            <span asp-validation-for="Input.Telephone" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div id="boutiquecol1" class="form-group">
                                        <div class="form-group">

                                            <input asp-for="Input.NomBoutique" class="form-control" placeholder="Nom boutique" />
                                            <span asp-validation-for="Input.NomBoutique" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">
                                            <select asp-for="Input.VilleBoutique" class="form-control" asp-items="@Html.GetEnumSelectList<Ville>()" placeholder="Ville">
                                                <option selected disabled>--Selectionnez une ville--</option>
                                            </select>
                                            <span asp-validation-for="Input.VilleBoutique" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <textarea asp-for="Input.DescriptionBoutique" class="form-control" placeholder="Description ..."></textarea>
                                            <span asp-validation-for="Input.DescriptionBoutique" class="text-danger"></span>
                                        </div>

                                    </div>
                                    <input type="button"  class="btnRegister" value="Precedent"style="margin-right:205px" id="precedentButton" onclick="precedent()" />
                                </div>
                                <div class="col-md-6 ">
                                    <div id="usercol2" class="form-group ">
                                        <div class="form-group">

                                            <input asp-for="Input.Prenom" class="form-control" placeholder="Prenom" />
                                            <span asp-validation-for="Input.Prenom" class="text-danger"></span>
                                        </div>

                                        <div class="form-group">

                                            <input class="form-control" placeholder="Confirmer l'email" />
                                            <span class="text-danger"></span>
                                        </div>

                                        <div class="form-group">

                                            <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirmer Mot de passe" />
                                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <select asp-for="Input.VilleBoutique" class="form-control" asp-items="@Html.GetEnumSelectList<Ville>()" placeholder="Ville">
                                                <option selected disabled>--Selectionnez une ville--</option>
                                            </select>
                                            <span asp-validation-for="Input.Ville" class="text-danger"></span>
                                        </div>
                                    </div>
                                    <div id="boutiquecol2" class="form-group ">
                                        <div class="form-group ">

                                            <input asp-for="Input.SiteBoutique" class="form-control" placeholder="Site" />
                                            <span asp-validation-for="Input.SiteBoutique" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <input asp-for="Input.TelephoneBoutique" class="form-control" placeholder="Telephone Boutique" />
                                            <span asp-validation-for="Input.TelephoneBoutique" class="text-danger"></span>
                                        </div>
                                        <div class="form-group">

                                            <textarea asp-for="Input.AdresseBoutique" class="form-control" placeholder="Adresse"></textarea>
                                            <span asp-validation-for="Input.AdresseBoutique" class="text-danger"></span>
                                        </div>


                                    </div>
                                    <input type="submit"  class="btnRegister" value="Register" id="registerButton" />
                                    <input type="button"  class="btnRegister" value="Suivant" id="suivantButton" onclick="boutiqueInfo()" />
                                </div>

                            </div>




                        </div>

                    </div>

                </form>
            </div>

        </div>

    </div>
</body>














