    <div class=" register" style=" min-height: 719px; margin-top: 40px; background: #fdf1ec;">
        <div class="row" style="min-height: 605px; height: 640px; box-shadow: 0px 14px 32px 0px rgb(0 0 0 / 58%); border-radius: 10px; ">
            <div class="col-md-3 register-left" style="background: #000000; border-radius: 10px; margin-top: 0px;height:640px">
                <img src="~/Images/panier.png" />
                <h3><img src="~/Images/Shopica.png" style="height:60px;width:170px ;margin-top:5px; margin-bottom:0 ;animation:none" /></h3>
                <p>Shop and Improve your Commerce Activities</p>
                <h5 style="margin-bottom: 10px; margin-top: 100px;">Have an account?</h5>
                <a id="linkLRegister" asp-page="./Login" asp-route-returnUrl="@Model.ReturnUrl">Login </a>
            </div>

            <div class="col-md-9 ">
                <form asp-route-returnUrl="@Model.ReturnUrl" method="post" enctype="multipart/form-data">


                    <div class="nav nav-tabs nav-justified mynavnav" >
                        <input type="radio" required asp-for="Input.Status" id="Particulier" value=@StatutPropriétaire.Particulier onchange="particulier()" checked />
                        <div class="nav-item ">
                            <label for="Particulier" style="margin-bottom: 4px; margin-top: 4px;">@StatutPropriétaire.Particulier</label>
                            <span asp-validation-for="Input.Status" class="text-danger"></span>
                        </div>
                        <input type="radio" required asp-for="Input.Status" id="Société" value=@StatutPropriétaire.Société onchange="boutique()" />
