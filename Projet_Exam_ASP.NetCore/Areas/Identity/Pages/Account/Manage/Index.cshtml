@page
@model IndexModel
@{
    ViewData["Title"] = "Change Your Profile";
    ViewData["ActivePage"] = ManageNavPages.Index;
}
@using Projet_Exam_ASP.NetCore.Data.enums
<div class=" register1" style=" min-height: 619px; margin-top: 15px; background: #fdf1ec;">
    <div class="myrow" style="min-height: 505px; box-shadow: 0px 14px 32px 0px rgb(0 0 0 / 58%); border-radius: 10px; ">
        <div class="mycol3 register-left" style="background: #000000; border-radius: 10px; margin-top: 0px;">

            <h3 style="margin-top:35%;margin-bottom:40%">Edit your account informations</h3>
            <div style="margin-top: 80%;">
                <partial name="_ManageNav" />
            </div>
        </div>
        <div class="mycol9 ">
            <div style=" position: absolute; width: 581px; top: 20px;">
                <partial name="_StatusMessage" model="Model.StatusMessage" />
            </div>
            <style>
                .fa-camera {
                    position: absolute;
                    left: 225px;
                    top: 117px;
                    font-size: 20px;
                    background: #c9c5c5f0;
                    border-radius: 10px;
                    color: black;
                    width: 30px;
                    height: 30px;
                    padding-top: 4px;
                    padding-left: 1px;
                    cursor: pointer;
                }

                    .fa-camera:hover {
                        background: #c96b6b;
                    }
                /*Profile Pic Start*/

                .picture-container {
                    position: relative;
                    text-align: center;
                    padding-right: 20%;
                    padding-left: 20%;
                    padding-top: 30px;
                    padding-bottom: 20px;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                }

                .picture-container1 {
                    position: relative;
                    display: flex;
                    justify-content: center;
                    align-items: center;
                    text-align: center;
                    padding-right: 20%;
                    padding-left: 20%;
                    padding-top: 15px;
                    padding-bottom: 15px;
                }

                .picture {
                    width: 130px;
                    height: 130px;
                    background-color: #999999;
                    color: #FFFFFF;
                    border-radius: 50%;
                    overflow: hidden;
                    transition: all 0.2s;
                    -webkit-transition: all 0.2s;
                    border: 4px solid #CCCCCC;
                }

                    .picture:hover {
                        border-color: #bd5757;
                    }


                .content.ct-wizard-green .picture:hover {
                    border-color: #05ae0e;
                }

                .content.ct-wizard-blue .picture:hover {
                    border-color: #3472f7;
                }

                .content.ct-wizard-orange .picture:hover {
                    border-color: #ff9500;
                }

                .content.ct-wizard-red .picture:hover {
                    border-color: #ff3b30;
                }

                .picture input[type="file"] {
                    cursor: pointer;
                    display: block;
                    height: 126px;
                    left: 44%;
                    top: 40px;
                    opacity: 0 !important;
                    position: absolute;
                    width: 126px;
                }

                .picture-src {
                    width: 100%;
                }
                /*Profile Pic End*/
            </style>
            <form id="profile-form" method="post" enctype="multipart/form-data">

                <div class="tab-content" style="margin-top: 15px;">
                    <div class="tab-pane active">

                        @* <div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
                        @*<div class="form-group">
                                <label asp-for="Username"></label>
                                <input asp-for="Username" class="form-control" disabled />
                            </div>*@

                        @*<div class="form-group">
                                <label asp-for="Input.ImageProfile"></label>
                                <input asp-for="Input.ImageProfile" accept="image/*" />
                                <span asp-validation-for="Input.ImageProfile" class="text-danger"></span>
                            </div>*@
                        <div class="myrow register-form " style="margin-top: 50px;padding-top: 0%;padding-right: 10%;padding-bottom: 10%;padding-left: 10%;">

                            <div class="mycol6">
                                <h2 style="margin-bottom: 10px; margin-top: 30px; justify-content: center; display: flex;">@ViewData["Title"]</h2>
                                <div class="picture-container1">
                                    <div class="picture" style="margin-top: 10px; margin-bottom: 20px;">
                                        <img src="~/Images/Profile_Icone_Par_Defaut.png" class="picture-src" id="wizardPicturePreview" title="" style="object-fit: cover; height:100%;">
                                        <input accept="image/*" type="file" id="wizard-picture" class="picture-src valid" asp-for="Input.ImageProfile" aria-invalid="false" style="vertical-align: middle; cursor: pointer; left: 132px; top: 26px;">
                                        <i class="fas fa-camera" id="camera" style="pointer-events: none;"></i>
                                    </div>

                                </div>
                                <div class="form-group">
                                    <div class="form-group">
                                        @* <label asp-for="Input.Nom"></label>*@
                                        <input asp-for="Input.Nom" class="form-control" placeholder="Nom" />
                                        <span asp-validation-for="Input.Nom" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        @*<label asp-for="Input.Prenom"></label>*@
                                        <input asp-for="Input.Prenom" class="form-control" placeholder="Prenom" />
                                        <span asp-validation-for="Input.Prenom" class="text-danger"></span>
                                    </div>
                                    <div class="form-group">
                                        @*<label asp-for="Input.Telephone"></label>*@
                                        <input asp-for="Input.Telephone" class="form-control" placeholder="Telephone" />
                                        <span asp-validation-for="Input.Telephone" class="text-danger"></span>
                                    </div><div class="form-group">
                                        @*<label asp-for="Input.Ville"></label>*@
                                        <input asp-for="Input.Ville" class="form-control" placeholder="Ville" />
                                        <span asp-validation-for="Input.Ville" class="text-danger"></span>
                                    </div>
                                    <div class="form-group" style="display: flex;justify-content: center;">
                                        <button id="update-profile-button" type="submit" class="btnRegister" style="justify-content: space-evenly; align-items: center; margin-top: 15px; width:100%">Update profile</button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </form>
        </div>
    </div>
    <br /><br /><br /><br />
</div>
        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
        <script src="https://code.jquery.com/jquery-1.12.4.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/3.4.1/js/bootstrap.min.js"></script>
        <script>
            $(document).ready(function () {
                // Prepare the preview for profile picture
                $("#wizard-picture").change(function () {
                    readURL(this);
                });
            });
            function readURL(input) {
                if (input.files && input.files[0]) {
                    var reader = new FileReader();

                    reader.onload = function (e) {
                        $('#wizardPicturePreview').attr('src', e.target.result).fadeIn('slow');
                    }
                    reader.readAsDataURL(input.files[0]);
                }
            }
            $("#wizard-picture").hover(function () {
                var i = document.getElementById('camera');
                i.style.background = "#c96b6b";
            },
                function () {
                    var i = document.getElementById('camera');
                    i.style.background = "#c9c5c5d9";
                })

        </script>
