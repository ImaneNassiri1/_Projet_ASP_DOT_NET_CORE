<link href="~/css/HomeStyle.css" rel="stylesheet" />
<h2 id="titreH2" >
</h2>
<div style="position: absolute;margin-top: 70px; width: 300px; right: auto; height: 60px; margin-top: -110px; left: 100px; " class="backBoutique">
    <a asp-action="Details" asp-controller="Boutiques" asp-route-id="@Model.Id" style="margin-top: 70px;">
        <i class="fas fa-backward"></i> Back to @Model.Nom
    </a>
</div>
<form asp-action="Edit" enctype="multipart/form-data">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />
    <div class="wrapper" style="margin-left:300px">
        <div class="product-img">
            <div id="ImgUser">
                <div class="picture">

                    <img src="@("/Images/Boutiques/"+ViewBag.image)" class="picture-src" id="wizardPicturePreview" title="" style="object-fit: cover; height:100%;">
                    <input accept="image/*" type="file" name="image" id="wizard-picture" class="picture-src valid" aria-invalid="false" style="vertical-align: middle;" />
                    <i class="fas fa-camera" id="camera" style="pointer-events: none;"></i>

                </div>
                <h6 class=""></h6>
            </div>
        </div>
        <div class="product-info">
            <div style="display:inline-flex">
                <div class="product-text">
                    <div style=" margin-right: 38px;">
                        <h4 style=" width: 242px;">Nom boutique</h4>
                        <input asp-for="Nom" class="form-control" placeholder="Nom boutique" style="font-size: 30px; color: #474747; margin-left: 38px; margin-right: 38px; width: 245px; }" />
                    </div>
                    <span asp-validation-for="Nom" class="text-danger"></span>


                    
                    <h4 style=" width: 242px; margin-top: 45px;">description boutique</h4>
                    <p><textarea asp-for="Description" class="form-control" placeholder="Description de la boutique" style="height: 125px; font-family: 'Playfair Display', serif; color: #8d8d8d; line-height: 1.7em; font-size: 15px; font-weight: lighter; overflow: hidden; margin-right: 45px; text-align: justify;"></textarea></p>
                    <span asp-validation-for="Description" class="text-danger"></span>
                    <div class="form-group">
                        <input type="submit" value="Save" class="btn btn-primary submitBtn" />
                    </div>
                </div>
                <div style="background-color:black" class="product-info">
                    <div class="product-text">
                        <br />
                        <h4 style=" margin-top: 25px;">Site Web : </h4>
                        <div class="form-group">
                            <h3 style="margin-right: 38px;"><input asp-for="site" class="form-control" placeholder="SiteWeb de la boutique" /></h3>
                            <span asp-validation-for="site" class="text-danger"></span>
                        </div>
                        <h4>Ville : </h4>
                        <div class="form-group">
                            <h3 style="margin-right: 38px;">
                                <select id="villes" asp-for="Ville" asp-items="Html.GetEnumSelectList<Ville>()" class="form-control" style="padding-right:5px;padding-left:5px">
                                    <option selected disabled>--Selectionnez une ville--</option>
                                </select></h3>
                            <span asp-validation-for="Ville" class="text-danger"></span>
                        </div>
                        <h4>Adresse : </h4>
                        <div class="form-group">
                            <h3 style="margin-right: 38px;"><input asp-for="Adresse" class="form-control" placeholder="Adresse de la boutique" /></h3>
                            <span asp-validation-for="Adresse" class="text-danger"></span>
                        </div>

                        <h4>Numero de telephone : </h4>
                        <div class="form-group">
                            <h3 style="margin-right: 38px;"><input asp-for="Telephone" class="form-control" placeholder="Numero de telephone" /></h3>
                            <span asp-validation-for="Telephone" class="text-danger"></span>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
</form>
