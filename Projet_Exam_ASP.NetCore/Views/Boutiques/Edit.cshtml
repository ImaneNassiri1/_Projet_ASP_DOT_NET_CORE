@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout1.cshtml";
}
<style>
    .product-text h3 input {
        background: transparent;
        border: 1px solid #ced4da4f;
        color: white;
        font-size: 11px;
        font-family: 'Raleway', sans-serif;
        font-weight: 400;
        text-transform: uppercase;
        letter-spacing: 0.2em;
    }
