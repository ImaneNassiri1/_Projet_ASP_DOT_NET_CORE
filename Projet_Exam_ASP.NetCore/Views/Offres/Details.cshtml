@model Projet_Exam_ASP.NetCore.Models.Offre

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@inject LanguageService language
<h1>Details</h1>

<div>
    <h4>Offre</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Titre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Titre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Ville)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Ville)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Date_Dépot)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Date_Dépot)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Catégorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Catégorie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.IndiceSousCatégorie)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.IndiceSousCatégorie)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayName(language.Getkey("Propriétaire"))
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AppUser.Nom)
        </dd>
        @if (User.IsInRole("Admin"))
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Valide)}
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Valide)
            </dd>
        }
        @if (Model.reduction != 0)
        {
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.reduction)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.reduction)
            </dd>
        }
    </dl>

</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
